<h1>Listing lectivos</h1>

<table>
  <tr>
    <th>Codigo</th>
    <th>Slogan</th>
    <th>Valor1p</th>
    <th>Valor2p</th>
    <th>Valor3p</th>
    <th>Valor4p</th>
    <th>Valor aprobado</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @lectivos.each do |lectivo| %>
  <tr>
    <td><%= lectivo.codigo %></td>
    <td><%= lectivo.slogan %></td>
    <td><%= lectivo.valor1p %></td>
    <td><%= lectivo.valor2p %></td>
    <td><%= lectivo.valor3p %></td>
    <td><%= lectivo.valor4p %></td>
    <td><%= lectivo.valor_aprobado %></td>
    <td><%= link_to 'Show', lectivo %></td>
    <td><%= link_to 'Edit', edit_lectivo_path(lectivo) %></td>
    <td><%= link_to 'Destroy', lectivo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

