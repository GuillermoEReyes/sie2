<h1>Listing familias</h1>

<table>
  <tr>
    <th>Codigo</th>
    <th>Familia</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @familias.each do |familia| %>
  <tr>
    <td><%= familia.codigo %></td>
    <td><%= familia.familia %></td>
    <td><%= link_to 'Show', familia %></td>
    <td><%= link_to 'Edit', edit_familia_path(familia) %></td>
    <td><%= link_to 'Destroy', familia, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

